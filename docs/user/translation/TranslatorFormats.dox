/*!
	\file TranslatorFormats.h
	\ingroup translation
	\ingroup libtranslation
	\brief Defines identifiers and structures for data formats and configuration
		messages.
*/


/*!
	\name Translators configuration extensions
	\brief The configuration extensions allows to pass through a BMessage
		format information to the translator to modify the behavior of the
		translation, or in some cases to get that information from the
		translator to the application.

	The Translation Kit has the following predefined standard extensions:
*/


//! @{


/*!
	\var char B_TRANSLATOR_EXT_HEADER_ONLY[]
	\brief Whether only output the header or not.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_DATA_ONLY[]
	\brief Whether only output the data or not.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_COMMENT[]
	\brief Adds a comment.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_TIME[]
	\brief Specifies a time or a time period.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_FRAME[]
	\brief Specifies a frame or a group of frames.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_BITMAP_RECT[]
	\brief Selects only a region of the bitmap.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_BITMAP_COLOR_SPACE[]
	\brief Specifies the current or the new color space of the bitmap.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_BITMAP_PALETTE[]
	\brief Specifies the bitmap color palette.
	\since BeOS R4.5
*/


/*!
	\var char B_TRANSLATOR_EXT_SOUND_CHANNEL[]
	\brief Tells which sound channels to output.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_SOUND_MONO[]
	\brief Tells to merge all sound channels into a single monoaural channel.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_SOUND_MARKER[]
	\brief Adds markers in frames of the sound data.
	\since BeOS R4
*/


/*!
	\var char B_TRANSLATOR_EXT_SOUND_LOOP[]
	\brief Sets a playback loop.
	\since BeOS R4
*/


//! @}


/*!
	\enum TranslatorGroups
	\ingroup translation

	Defines the data format groups for the translators.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_BITMAP
	\brief The translator works with bitmap images.

	The bitmap metadata header is defined using the TranslatorBitmap struct.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_PICTURE
	\brief The translator works with picture drawing formats.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_SOUND
	\brief The translator works with sounds.

	The default sound format metadata is described using the TranslatorSound
	struct.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_TEXT
	\brief The translator works with text.

	For styled text, there is a set of structs to work with text style and
	other text metadata: TranslatorStyledTextRecordHeader,
	TranslatorStyledTextStreamHeader, TranslatorStyledTextTextHeader,
	and TranslatorStyledTextStyleHeader.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_MIDI
	\brief The translator works with MIDI data.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_MEDIA
	\brief Undocumented.

	\since BeOS R3
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_NONE
	\brief The translator works with a non-standard data format.

	\since BeOS R4
*/


/*!
	\var TranslatorGroups B_TRANSLATOR_ANY_TYPE
	\brief The translator works with any type of data.

	\since BeOS R4
*/


/*!
	\var B_GIF_FORMAT
	\brief The translator translates bitmaps from or to a Graphics
