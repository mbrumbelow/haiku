rule PrepareBookMark name : folder url title
{
	# target should be the "name" in the right folder base
	# and then "folder" in it.
	AddFileDataAttribute $(target) : BEOS:TYPE : mims : application/x-vnd.Be-bookmark ;
	AddFileDataAttribute $(target) : META:title : Text : $(title) ;
	AddFileDataAttribute $(target) : META:url : Text : $(title) ;
	AddFileDataAttribute $(target) : BEOS:ICON : icon : bookmarkIcons/$(name).hvif ;
}


rule PrepareLoader name
{
	AddFileDataAttribute $(target) : BEOS:TYPE : mims : text/html ;
	AddFileDataAttribute $(target) : BEOS:ICON : icon : loaderIcons/$(name).hvif ;
}


rule PrepareBookMarkFolder name : icon
{
	mkdir the folder
	AddFileDataAttribute $(target) : BEOS:ICON : icon : folderIcons/$(name).hvif
}

# Create LoaderPages folder...
PrepareLoader BeBook ;
PrepareLoader QuickTour ;
PerpareLoader UserGuide ;
PrepareLoader Welcome ;

# Create Bookmarks folder...
PrepareBookMarkFolder 'Bookmark bar' ;
PrepareBookMarkFolder Documentation ;
PrepareBookMarkFolder 'Haiku Project' ;
PrepareBookMarkFolder Software ;

