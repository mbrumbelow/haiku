SubDir HAIKU_TOP src apps glteapot ;
UseBuildFeatureHeaders glu ;
UseBuildFeatureHeaders libglvnd ;

local sources =
	FPS.cpp
	GLObject.cpp
	ObjectView.cpp
	error.cpp
	TeapotWindow.cpp
	TeapotApp.cpp
;

Includes [ FGristFiles $(sources) ] :
	[ BuildFeatureAttribute glu : headers ]
	[ BuildFeatureAttribute libglvnd : headers ]
	;

Application GLTeapot :
	$(sources)
	:
	be game localestub [ TargetLibsupc++ ]
	[ BuildFeatureAttribute glu : library ]
	[ BuildFeatureAttribute libglvnd : library ]
	: GLTeapot.rdef
;

DoCatalogs GLTeapot :
	x-vnd.Haiku-GLTeapot
	:
	TeapotApp.cpp
	TeapotWindow.cpp
;
