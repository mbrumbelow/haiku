SubDir HAIKU_TOP src tests kits opengl demos gears ;
UseBuildFeatureHeaders libglvnd ;
UseBuildFeatureHeaders glu ;
UseLibraryHeaders glut ;

local sources =
	gears.c
;

Includes [ FGristFiles $(sources) ]
	:
	[ BuildFeatureAttribute libglvnd : headers ]
	[ BuildFeatureAttribute glu : headers ]
;


SimpleTest GLGears :
	$(sources)
	:
	be libglut.so
	[ BuildFeatureAttribute libglvnd : library ]
	[ BuildFeatureAttribute glu : library ]
;
