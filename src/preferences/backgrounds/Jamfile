SubDir HAIKU_TOP src preferences backgrounds ;

UsePrivateHeaders preferences shared tracker ;
SubDirHdrs $(HAIKU_TOP) src kits tracker ;
UseHeaders [ FDirName $(HAIKU_TOP) src kits tracker ] : false ;
    
Preference Backgrounds :
	BackgroundImage.cpp
	Backgrounds.cpp
	BackgroundsView.cpp
	ImageFilePanel.cpp
	: be tracker translation [ TargetLibsupc++ ] localestub
	: Backgrounds.rdef
	;
 
DoCatalogs Backgrounds :
	x-vnd.Haiku-Backgrounds
	:
	Backgrounds.cpp
	BackgroundsView.cpp
	ImageFilePanel.cpp
;

