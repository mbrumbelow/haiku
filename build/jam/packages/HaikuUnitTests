	haikudepottest.so
	libapptest.so
	libappteststub.so
	libinterfacetest.so
	libkerneldebuggertest.so
	libkernelfstest.so
	libkernelutilstest.so
	liblaunch_daemontest.so
	libmakeudfimagetest.so
	libmediatest.so
	libnetapitest.so
	librootposixtest.so
	libsharedtest.so
	libstoragetest.so
	libsupporttest_RemoteTestObject.so
	libsupporttest.so
	libtranslationtest.so
	libtranslatorstest.so
	localekittest.so
	posixnettest.so
	servicekittest.so
;

BuildHaikuPackage $(haikuUnitTestsPackage) : haiku_unittests ;
