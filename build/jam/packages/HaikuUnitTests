local haikuUnitTestsPackage = haiku_unittests.hpkg ;
HaikuPackage $(haikuUnitTestsPackage) ;

AddFilesToPackage bin : UnitTester ;
AddLibrariesToPackage lib : libcppunit.so ;


# TODO: Find a better way to get all of the unit tests dynamically

AddFilesToPackage add-ons unittests haiku
	:
